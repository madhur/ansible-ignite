[Unit]
Description=Apache Ignite Server
After=network.target

[Service]
#EnvironmentFile=-/usr/local/java/java-oracle.env
#EnvironmentFile=-/usr/local/java/oracle-jre.env
Environment="JAVA_HOME=/usr/local/openjdk-jre"
Type=simple
User=ignite
WorkingDirectory={{ignite_home}}/{{ignite_name}}
ExecStart={{ignite_home}}/{{ignite_name}}/bin/ignite.sh
Restart=on-failure

[Install]
WantedBy=multi-user.target
